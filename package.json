{
  "name": "@yext/react-components",
  "version": "0.0.0",
  "description": "",
  "author": "slapshot@yext.com",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/esm/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json",
    "lint": "eslint .",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "wcag": "test-storybook",
    "prettier-write": "prettier --write .",
    "prettier-check": "prettier --check ."
  },
  "dependencies": {
    "mapbox-gl": "^2.11.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@percy/cli": "^1.16.0",
    "@percy/storybook": "^4.3.4",
    "@storybook/addon-a11y": "^6.5.14",
    "@storybook/addon-actions": "^6.5.14",
    "@storybook/addon-coverage": "^0.0.7",
    "@storybook/addon-essentials": "^6.5.14",
    "@storybook/addon-interactions": "^6.5.14",
    "@storybook/addon-links": "^6.5.14",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-vite": "^0.2.6",
    "@storybook/react": "^6.5.14",
    "@storybook/test-runner": "^0.9.1",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.4",
    "@types/mapbox-gl": "^2.7.10",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "@yext/eslint-config": "^1.0.0",
    "@yext/eslint-plugin-export-star": "^1.1.0",
    "@yext/types": "^0.1.11-alpha",
    "axe-playwright": "^1.1.11",
    "babel-jest": "^29.3.1",
    "eslint": "^8.29.0",
    "eslint-plugin-react-perf": "^3.3.1",
    "eslint-plugin-storybook": "^0.6.8",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "prettier": "2.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.2.4",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4",
    "vite": "^4.0.1"
  },
  "peerDependencies": {
    "react": "^17 || ^18",
    "react-dom": "^17 || ^18"
  },
  "jest": {
    "bail": 0,
    "verbose": true,
    "collectCoverage": true,
    "restoreMocks": true,
    "collectCoverageFrom": [
      "src/**",
      "!src/components/Address/i18n.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ],
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/tests/**/*.test.ts?(x)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/tests/__setup__/*",
      "<rootDir>/tests/__fixtures__/*"
    ],
    "transform": {
      "\\.[jt]sx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    }
  }
}
