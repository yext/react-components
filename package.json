{
  "name": "@yext/react-components",
  "version": "0.0.0",
  "description": "",
  "author": "slapshot@yext.com",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/commonjs/index.js"
    },
    "./bundle.css": "./lib/bundle.css",
    "./bundle-no-resets.css": "./lib/bundle-no-resets.css"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json && npm run build:css",
    "build:css": "tailwindcss -o ./lib/bundle.css --minify -c tailwind.config.cjs && tailwindcss -o ./lib/bundle-no-resets.css --minify -c tailwind-no-resets.config.cjs",
    "lint": "eslint .",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "storybook": "start-storybook -p 6006 --no-manager-cache",
    "build-storybook": "build-storybook",
    "wcag": "test-storybook",
    "prettier-write": "prettier --write .",
    "prettier-check": "prettier --check ."
  },
  "dependencies": {
    "react-markdown": "^6.0.3",
    "rehype-raw": "^5.0.0",
    "rehype-sanitize": "^4.0.0",
    "remark-gfm": "^1.0.0",
    "@lexical/code": "^0.8.0",
    "@lexical/hashtag": "^0.8.0",
    "@lexical/link": "^0.8.0",
    "@lexical/list": "^0.8.0",
    "@lexical/react": "^0.8.0",
    "@lexical/rich-text": "^0.8.0",
    "@lexical/table": "^0.8.0",
    "lexical": "^0.8.0",
    "mapbox-gl": "^2.11.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@percy/cli": "^1.16.0",
    "@percy/storybook": "^4.3.4",
    "@storybook/addon-a11y": "^6.5.13",
    "@storybook/addon-actions": "^6.5.13",
    "@storybook/addon-coverage": "^0.0.2",
    "@storybook/addon-essentials": "^6.5.13",
    "@storybook/addon-interactions": "^6.5.13",
    "@storybook/addon-links": "^6.5.13",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.5.13",
    "@storybook/test-runner": "^0.5.0",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/react": "^12.1.3",
    "@types/jest": "^29.2.2",
    "@types/mapbox-gl": "^2.7.8",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@yext/eslint-config": "^1.0.0",
    "@yext/eslint-plugin-export-star": "^1.0.2",
    "@yext/types": "^0.1.11-alpha",
    "axe-playwright": "^1.1.11",
    "babel-jest": "^27.0.6",
    "eslint": "^8.11.0",
    "eslint-plugin-react-perf": "^3.3.1",
    "eslint-plugin-storybook": "^0.6.7",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "prettier": "2.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwindcss": "^3.2.4",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4",
    "unified": "^9.0.0"
  },
  "peerDependencies": {
    "react": "^17 || ^18",
    "react-dom": "^17 || ^18"
  },
  "jest": {
    "bail": 0,
    "verbose": true,
    "collectCoverage": true,
    "restoreMocks": true,
    "collectCoverageFrom": [
      "src/**",
      "!src/components/Address/i18n.ts",
      "!src/components/Markdown.tsx",
      "!src/components/richText/**/*.ts?(x)"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ],
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/tests/**/*.test.ts?(x)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/tests/__setup__/*",
      "<rootDir>/tests/__fixtures__/*"
    ],
    "transform": {
      "\\.[jt]sx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    }
  }
}
